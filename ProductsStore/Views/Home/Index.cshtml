@model IEnumerable<Product>


@{ Layout = "_Layout"; }

@*<div class="offset-2 col-2">
        

    </div>*@

<div class="container">
    <div class="row">
        <div class="col-md-10">

            <div class="card active">
                <div class="card-header">
                    <h3 class="p-2 bg-success text-white text-center rounded-pill">Products</h3>
                </div>

                <div class="card-body">

                    <div class="container-fluid mt-3">
                        @if (ViewBag.UpdateAll != true)
                        {
                            <div class="row">
                                <div class="col-2 font-weight-bold">Name</div>
                                <div class="col-2 font-weight-bold">Category</div>
                                <div class="col-2 font-weight-bold text-right">Purchase Price</div>
                                <div class="col-2 font-weight-bold text-right">Retail Price</div>
                                <div class="col"></div>

                            </div>

                            <form asp-action="AddProduct" method="post">
                                <div class="row p-2">
                                    <div class="col-2"><input name="Name" class="form-control" /></div>
                                    <div class="col-2"><input name="Category" class="form-control" /></div>
                                    <div class="col-2">
                                        <input name="PurchasePrice" class="form-control" />
                                    </div>
                                    <div class="col-2">
                                        <input name="RetailPrice" class="form-control" />
                                    </div>
                                    <div class="col">
                                        <button type="submit" class="btn btn-primary">Add</button>
                                    </div>
                                </div>
                            </form>
                            <div>
                                @if (Model.Count() == 0)
                                {
                                    <div class="row">
                                        <div class="col text-center p-2">No Data</div>
                                    </div>
                                }
                                else
                                {
                                    @foreach (Product p in Model)
                                    {
                                        <div class="row p-2">
                                            <div class="col-2">@p.Name</div>
                                            <div class="col-2">@p.Category</div>
                                            <div class="col-2 text-right">@p.PurchasePrice</div>
                                            <div class="col-2 text-right">@p.RetailPrice</div>
                                            <div class="col">
                                                <form asp-action="Delete" method="post">
                                                    <a asp-action="UpdateProduct" asp-route-key="@p.Id"
                                                       class="btn btn-outline-info"> Edit </a>

                                                    <input type="hidden" name="Id" value="@p.Id" />
                                                    <button type="submit" class="btn btn-outline-danger">Delete</button>

                                                </form>

                                            </div>

                                        </div>
                                    }
                                }
                            </div>
                            <div class="text-center">
                                <a asp-action="UpdateAll" class="btn btn-primary">Edit All</a>
                            </div>
                        }
                        else
                        {
                            @Html.Partial("InlineEditor", Model)
                        }
                    </div>

                </div>

                <div class="card-footer">
                    <p></p>
                </div>

            </div>



        </div>

        @*<div class="col-md-2">
            <div class="card">
                <div class="card-header">
                    <p>Header</p>
                </div>
                <div class="card-body">
                    <p>Card Body</p>
                </div>
                <div class="card-footer">
                    <p>footer</p>
                </div>
            </div>
        </div>*@

    </div>
</div>
    

